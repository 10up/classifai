{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
	"title": "Recommended Content",
	"description": "Display Recommended content by Azure Personalizer",
	"textdomain": "classifai",
	"name": "classifai/recommended-content-block",
  "category": "classifai-blocks",
	"attributes":{
		"contentPostType": {
      "type" : "string"
    },
    "displayPostExcept": {
        "type" : "boolean"
    },
    "displayAuthor": {
        "type" : "boolean"
    },
    "displayPostDate": {
        "type" : "boolean"
    },
    "displayFeaturedImage": {
        "type" : "boolean"
    },
    "addLinkToFeaturedImage": {
      "type" : "boolean"
    }
  },
  "supports": {
    "html": false
  },
  "editorScript": "file:../../../../dist/js/recommended-content-block.js",
  "editorStyle": "file:../../../../dist/blocks/recommended-content-block/editor.css",
  "style": "recommended-content-block-style"
}
