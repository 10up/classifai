{
  "name": "classifai",
  "version": "1.5.1",
  "license": "GPLv2",
  "repository": "https://github.com/10up/classifai/",
  "description": "Enhance your WordPress content with Artificial Intelligence and Machine Learning services.",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --watch --mode=development",
    "install_tests": "./bin/install-wp-tests.sh classifai_unit_tests root password 127.0.0.1",
    "test": "./vendor/bin/phpunit",
    "tests:e2e": "./vendor/bin/wpacceptance run",
    "makepot": "wpi18n makepot && echo '.pot file updated'",
    "build:docs": "rm -rf docs && jsdoc -c hookdoc-conf.json classifai.php includes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.php": [
      "./vendor/bin/phpcs --extensions=php --warning-severity=8 -s --runtime-set testVersion 7.0"
    ]
  },
  "author": {
    "name": "10up",
    "email": "opensource@10up.com",
    "url": "https://10up.com",
    "role": "developer"
  },
  "devDependencies": {
    "@10up/eslint-config": "^2.0.2-next",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/babel-preset-default": "^4.10.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^2.4.0",
    "@wordpress/eslint-plugin": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-loader": "^3.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^3.0.5",
    "jsdoc": "^3.6.3",
    "lint-staged": "^9.2.5",
    "prettier": "^1.19.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpackbar": "^4.0.0",
    "wp-hookdoc": "^0.2.0"
  },
  "dependencies": {
    "node-wp-i18n": "^1.2.3"
  }
}
